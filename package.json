{
  "name": "arduino-client",
  "version": "1.0.0",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@arduino/arduino-iot-client": "^1.3.3",
    "arduino-iot-js": "^0.6.0",
    "axios": "^0.20.0",
    "classnames": "^2.2.6",
    "dotenv": "^8.2.0",
    "micro": "^9.3.4",
    "micro-cors": "^0.1.1",
    "microrouter": "^3.1.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.3",
    "serve-handler": "^6.1.3",
    "tailwindcss": "^1.7.4",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "semi": false
  },
  "private": true,
  "scripts": {
    "build": "npm run build:css && npm run build:client",
    "build:client": "react-scripts build",
    "build:css": "tailwind build src/styles.css -o src/tailwind.css",
    "dev": "concurrently 'npm run dev:api' 'npm run dev:client' 'npm run dev:css'",
    "dev:api": "nodemon --exec 'npm start' -w 'api/' -e 'js'",
    "dev:client": "react-scripts start",
    "dev:css": "nodemon --exec 'npm run build:css' -w tailwind.config.js -w src/styles.css",
    "start": "node api/index.js"
  }
}
